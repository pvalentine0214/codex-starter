<section class="footer" style="background-color: var(--color-bg); color: var(--color-text); padding: var(--space-xl) 0;">
  <div class="container">
    <div class="footer-inner" style="display: flex; flex-wrap: wrap; justify-content: space-between; gap: var(--space-lg);">

      <!-- Quick Links -->
      <div class="footer-links" style="min-width: 200px;">
        <h3 style="font-family: var(--font-alt); margin-bottom: var(--space-sm);">Quick Links</h3>
        <ul style="list-style: none; padding: 0;">
          {% for link in linklists['main-menu'].links %}
            <li style="margin-bottom: var(--space-xs);">
              <a href="{{ link.url }}" style="color: var(--color-text);">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Newsletter Signup -->
      <div class="footer-newsletter" style="flex: 1; min-width: 240px;">
        <h3 style="font-family: var(--font-alt); margin-bottom: var(--space-sm);">
          Join Our Newsletter
        </h3>
        <form action="/contact#newsletter" method="post" style="display: flex; gap: var(--space-xs);">
          <input
            type="email"
            name="contact[email]"
            placeholder="Your email"
            required
            style="flex: 1; padding: var(--space-sm); border: 1px solid var(--color-secondary); border-radius: 4px; font-family: var(--font-sans);"
          >
          <button type="submit" class="button">Subscribe</button>
        </form>
      </div>

      <!-- Social Icons -->
      <div class="footer-social" style="min-width: 200px;">
        <h3 style="font-family: var(--font-alt); margin-bottom: var(--space-sm);">Follow Us</h3>
        <div style="display: flex; gap: var(--space-sm); font-size: 1.5rem;">
          <a href="#" aria-label="Facebook">ðŸ“˜</a>
          <a href="#" aria-label="Instagram">ðŸ“¸</a>
          <a href="#" aria-label="LinkedIn">ðŸ”—</a>
        </div>
      </div>

    </div>

    <div class="footer-bottom" style="text-align: center; margin-top: var(--space-lg); font-size: 0.875rem;">
      <p>&copy; {{ 'now' | date: "%Y" }} 1028 Wealth Management Associates. All rights reserved.</p>
    </div>
  </div>
</section>
