{% comment %}
  File: sections/testimonials.liquid
{% endcomment %}

<section class="testimonials" style="background-color: var(--color-secondary); color: var(--color-white); padding: var(--space-xl) 0;">
  <div class="container text-center">
    <h2 style="font-family: var(--font-alt); font-size: 2rem; margin-bottom: var(--space-md);">
      What Our Clients Say
    </h2>
    <div class="testimonials-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: var(--space-lg);">
      {% for block in section.blocks %}
        <div class="testimonial-card" style="background-color: var(--color-white); color: var(--color-text); padding: var(--space-md); border-radius: 8px; text-align: left;">
          <p style="font-style: italic; margin-bottom: var(--space-sm);">“{{ block.settings.quote }}”</p>
          <p style="font-weight: bold; margin-bottom: var(--space-xs);">{{ block.settings.author }}</p>
          {% if block.settings.role %}
            <p style="font-size: 0.9rem; color: var(--color-secondary);">{{ block.settings.role }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": [],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "text",
          "id": "quote",
          "label": "Quote",
          "default": "This service transformed my credit!"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "Jane Doe"
        },
        {
          "type": "text",
          "id": "role",
          "label": "Role (optional)",
          "default": "Small Business Owner"
        }
      ]
    }
  ],
  "max_blocks": 5,
  "presets": [
    {
      "name": "Testimonials"
    }
  ]
}
{% endschema %}
